# Azure Storage Configuration
# Get this from Azure Portal → Storage Account → Access keys → Connection string
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR_ACCOUNT_NAME;AccountKey=YOUR_ACCOUNT_KEY;EndpointSuffix=core.windows.net

# Optional: Override defaults (or set in azure_config.py)
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_CONTAINERS=your_container_name
AZURE_FOLDERS=
AZURE_ENVIRONMENT=prod
AZURE_ENV_TYPE=production
AZURE_DATA_SOURCE_TYPE=credit_card

# Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=torro_discovery

# Email Configuration (Gmail)
# For Gmail: Create App Password at https://myaccount.google.com/apppasswords
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAILS=your_email@gmail.com

# Airflow Environment Variables (for airflow.cfg)
# These are automatically loaded by Airflow when using environment variable format:
# AIRFLOW__{SECTION}__{KEY} = value
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=mysql+pymysql://root:your_mysql_password@localhost:3306/airflow_metadata?charset=utf8mb4
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here_generate_with_openssl_rand_hex_32

# Database Retry Configuration
# DB_RETRY_MAX_ATTEMPTS: Maximum retry attempts (0 = unlimited, default: 20)
# Note: Even with unlimited retries, there's a safety timeout of 1 hour (3600s)
DB_RETRY_MAX_ATTEMPTS=20

# Azure AI Language (DLP) Configuration - Optional
# Get these from Azure Portal → Azure AI Language resource → Keys and Endpoint
# If not configured, PII detection will be disabled
AZURE_AI_LANGUAGE_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_AI_LANGUAGE_KEY=your_azure_ai_language_key

