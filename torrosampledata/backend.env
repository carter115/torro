# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_PORT=8099
SECRET_KEY=dev-secret-key-change-in-production

# Database Configuration (MySQL)
DB_HOST=localhost
DB_PORT=3306
DB_USER=abc
DB_PASSWORD=xxx
DB_NAME=torroforexcel
DB_DRIVER=pymysql

# Database Pool Configuration
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
